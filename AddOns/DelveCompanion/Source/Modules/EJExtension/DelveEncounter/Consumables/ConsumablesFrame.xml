<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Frame name="DelveCompanionDelveEncounterConsumablesFrameTemplate"
        mixin="DelveCompanion_DelveEncounterConsumablesFrameMixin"
        virtual="true">
        <Size x="150" y="100" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="RewardCardBG" atlas="ui-journeys-delve-reward-bar"
                    useAtlasSize="true" setAllPoints="true" />
            </Layer>
        </Layers>
        <Frames>
            <Frame parentKey="Keys"
                inherits="DelveCompanionCustomActionWidgetTemplate">
                <Size x="40" y="26" />
                <KeyValues>
                    <KeyValue key="iconSizeX" value="26" type="number" />
                    <KeyValue key="iconSizeY" value="26" type="number" />
                    <KeyValue key="tooltipAnchor" value="ANCHOR_RIGHT" type="string" />
                </KeyValues>
                <Anchors>
                    <Anchor point="TOPLEFT" x="35" y="-22" />
                </Anchors>
            </Frame>
            <Frame parentKey="Shards"
                inherits="DelveCompanionCustomActionWidgetTemplate">
                <Size x="40" y="26" />
                <KeyValues>
                    <KeyValue key="iconSizeX" value="26" type="number" />
                    <KeyValue key="iconSizeY" value="26" type="number" />
                    <KeyValue key="useAutoScaling" value="true" type="boolean" />
                    <KeyValue key="tooltipAnchor" value="ANCHOR_RIGHT" type="string" />
                </KeyValues>
                <Anchors>
                    <Anchor point="TOP" relativeKey="$parent.Keys"
                        relativePoint="BOTTOM" y="-5" />
                </Anchors>
            </Frame>

            <Frame parentKey="BountyMap"
                inherits="DelveCompanionCustomActionWidgetTemplate">
                <Size x="40" y="26" />
                <KeyValues>
                    <KeyValue key="iconSizeX" value="26" type="number" />
                    <KeyValue key="iconSizeY" value="26" type="number" />
                    <KeyValue key="frameType" value="item" type="string" />
                    <KeyValue key="tooltipAnchor" value="ANCHOR_RIGHT" type="string" />
                </KeyValues>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Keys" relativePoint="RIGHT" x="15" />
                </Anchors>
            </Frame>
            <Frame parentKey="ManaCrystals"
                inherits="DelveCompanionCustomActionWidgetTemplate">
                <Size x="40" y="26" />
                <KeyValues>
                    <KeyValue key="iconSizeX" value="26" type="number" />
                    <KeyValue key="iconSizeY" value="26" type="number" />
                    <KeyValue key="useAutoScaling" value="true" type="boolean" />
                    <KeyValue key="tooltipAnchor" value="ANCHOR_RIGHT" type="string" />
                </KeyValues>
                <Anchors>
                    <Anchor point="TOP" relativeKey="$parent.BountyMap"
                        relativePoint="BOTTOM" y="-5" />
                </Anchors>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnShow method="OnShow" />
            <OnHide method="OnHide" />
            <OnEvent method="OnEvent" />
        </Scripts>
    </Frame>
</Ui>