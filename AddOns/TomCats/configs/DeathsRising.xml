<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Frame name="TomCatsBundledDeathsRisingInterfaceOptionsPanel" hidden="false" parent="InterfaceOptionsFramePanelContainer">
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" text="Rares of Death's Rising" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="16" y="-16"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <CheckButton name="$parentEnableMinimapButton" inherits="InterfaceOptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="-2" y="-8"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                            self.type = CONTROLTYPE_CHECKBOX
                            self.Text:SetText("Enable Minimap Button")
                            self.tooltipText = "Enables or disables the minimap button"
                            BlizzardOptionsPanel_RegisterControl(self, self:GetParent())
                            self.defaultValue = "1"
                            self.GetValue = function(self)
                                local currentValue = _G["TomCatsBundledDeathsRisingMinimapButton"]:GetPreferences().hidden
                                if (currentValue) then return "0" end
                                return "1"
                            end
                            self.SetValue = function(self, value)
                                if (value == "1") then
                                    _G["TomCatsBundledDeathsRisingMinimapButton"]:SetEnabled(true)
                                else
                                    _G["TomCatsBundledDeathsRisingMinimapButton"]:SetEnabled(false)
                                end
                            end
                    </OnLoad>
                </Scripts>
            </CheckButton>
        </Frames>
    </Frame>
</Ui>
