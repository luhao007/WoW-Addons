			<Layer level="ARTWORK">
                <!-- pets for the team or target -->
				<Texture parentArray="Pets" mixin="RematchTeamListPetButtonMixin">
					<Size x="22" y="22"/>
					<Anchors>
						<Anchor point="LEFT" x="2" y="0"/>
					</Anchors>
					<TexCoords left="0.075" right="0.925" top="0.075" bottom="0.925"/>
					<KeyValues>
						<KeyValue key="petSlot" value="1"/>
