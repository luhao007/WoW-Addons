                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <!-- name of the team/target (no subname in compact) -->
                <FontString parentKey="Name" inherits="GameFontNormal" justifyH="LEFT" wordwrap="false">
