				<Size>
					<AbsDimension x="14" y="14"/>
				</Size>
				<Anchors>
					<Anchor point="RIGHT" relativeTo="$parentEquipmentButton" relativePoint="LEFT" x="-3"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture file="interface\macroframe\macroframe-icon" alpha="0.5" parentKey="texture"/>
					</Layer>
				</Layers>
				<Scripts>
                    <OnLoad>self:RegisterForClicks("LeftButtonUp", "RightButtonUp")</OnLoad>
					<OnEnter function="TalentSetListButton_Macro_OnEnter" />
					<OnLeave function="TalentSetListButton_Generic_OnLeave" />
					<OnMouseDown>self.texture:SetPoint("TOPLEFT", 1, -1)</OnMouseDown>
					<OnMouseUp>self.texture:SetPoint("TOPLEFT", 0, 0)</OnMouseUp>
					<OnClick function="TalentSetListButton_Macro_OnClick" />
				</Scripts>
			</Button>
             <Button name="$parentArrowUp" parentKey="ArrowUp">
				<Size>
					<AbsDimension x="14" y="14"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" x="1" y="-1" />
                    <Anchor point="BOTTOMLEFT" relativePoint="LEFT" x="1" />
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture file="interface\transmogrify\transmog-tooltip-arrow" parentKey="texture"/>
					</Layer>
				</Layers>
				<Scripts>
                    <OnLoad>
                        self:RegisterForClicks("LeftButtonUp")
                        self.texture:SetRotation(1.5708)
                    </OnLoad>
					<OnMouseDown>self.texture:SetPoint("TOPLEFT", 1, -1)</OnMouseDown>
					<OnMouseUp>self.texture:SetPoint("TOPLEFT", 0, 0)</OnMouseUp>
					<OnClick function="TalentSetListButton_ArrowUp_OnClick" />
				</Scripts>
			</Button>
            <Button name="$parentArrowDown" parentKey="ArrowDown">
				<Size>
					<AbsDimension x="14" y="14"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="1" y="1" />
					<Anchor point="TOPLEFT" relativePoint="LEFT" x="1" />
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture file="interface\transmogrify\transmog-tooltip-arrow" parentKey="texture"/>
					</Layer>
				</Layers>
				<Scripts>
                    <OnLoad>
                        self:RegisterForClicks("LeftButtonUp")
                        self.texture:SetRotation(4.7124)
                    </OnLoad>
					<OnMouseDown>self.texture:SetPoint("TOPLEFT", 1, -1)</OnMouseDown>
					<OnMouseUp>self.texture:SetPoint("TOPLEFT", 0, 0)</OnMouseUp>
					<OnClick function="TalentSetListButton_ArrowDown_OnClick" />
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton")
				SetClampedTextureRotation(self.BgBottom, 180)
			</OnLoad>
			<OnClick function="TalentSetListButton_OnClick" />
			<OnEnter function="TalentSetListButton_OnEnter" />
			<OnLeave function="TalentSetListButton_OnLeave" />
			<OnDoubleClick function="TalentSetListButton_OnDoubleClick" />
            <OnDragStart function="TalentSetListButton_OnDragStart" />
		</Scripts>
		<NormalTexture name="$parentIcon" parentKey="icon">
			<Size>
				<AbsDimension x="36" y="36"/>
			</Size>
			<Anchors>
				<Anchor point="LEFT">
					<Offset>
						<AbsDimension x="15" y="0"/>
					</Offset>
				</Anchor>
			</Anchors>
		</NormalTexture>
	</Button>
	
