					</OnMouseDown>
					<OnMouseUp>
						self.texture:SetPoint("TOPLEFT", 0, 0)
					</OnMouseUp>
					<OnClick function="TalentSetListButton_Equipment_OnClick" />
				</Scripts>
			</Button>
