    <!-- blizzard interface options -->
    <Button name="TalentSetManagerInterfaceOptionsIconSel" virtual="true">
       <Size x="32" y="32"/>
       <Frames>
            <Frame name="$parentBorder" parentKey="border" inherits="ThinBorderTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        for i = 1, #self.Textures do
                            self.Textures[i]:SetVertexColor(0.5, 0.75, 1, 1)
                            self.Textures[i]:SetAlpha(0.5)
                        end
                    </OnLoad>
                </Scripts>
            </Frame>
       </Frames>
       
       <Layers>
            <Layer level="ARTWORK">
                <Texture name="$parentIcon" parentKey="texture">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="3" y="-3"/>
                        <Anchor point="BOTTOMRIGHT" x="-3" y="3"/>
                    </Anchors>
                </Texture>
            </Layer>
       </Layers>
       
       <Scripts>
           <OnMouseDown>
                self.texture:SetPoint("TOPLEFT", 4, -4)
                self.texture:SetPoint("BOTTOMRIGHT", -2, 2)
           </OnMouseDown>
           <OnMouseUp>
                self.texture:SetPoint("TOPLEFT", 3, -3)
                self.texture:SetPoint("BOTTOMRIGHT", -3, 3)
           </OnMouseUp>
           <OnEnter>
              for i = 1, #self.border.Textures do
                  self.border.Textures[i]:SetAlpha(0.8)
              end
           </OnEnter>
           <OnLeave>
              if self.selected then return end
              for i = 1, #self.border.Textures do
                  self.border.Textures[i]:SetAlpha(0.5)
              end
           </OnLeave>
       </Scripts>
    </Button>
