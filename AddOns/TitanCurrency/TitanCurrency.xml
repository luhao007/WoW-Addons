<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="TitanCurrency.lua"/>
	<Frame parent="UIParent">
		<Frames>
			<Button name="TitanPanelCurrencyButton" inherits="TitanPanelButtonTemplate" frameStrata="FULLSCREEN" toplevel="true">
				<Size>
					<AbsDimension x="128" y="16"/>
				</Size>
				<Frames>
					<Button name="$parentCopperButton" parentKey="CopperButton" inherits="TitanPanelChildButtonTemplate">
						<Size>
							<AbsDimension x="32" y="13"/>
						</Size>
						<Anchors>
							<Anchor point="RIGHT">
								<Offset>
									<AbsDimension x="-13" y="1"/>
								</Offset>
							</Anchor>
						</Anchors>

						<NormalTexture atlas="coin-copper">
								<Size x="13" y="13"/>
								<Anchors>
										<Anchor point="RIGHT"/>
								</Anchors>
						</NormalTexture>
						<ButtonText name="$parentText" parentKey="Text">
								<Anchors>
										<Anchor point="RIGHT" x="-13" y="0"/>
								</Anchors>
						</ButtonText>
						<NormalFont style="NumberFontNormalRight"/>
						<PushedTextOffset x="0" y="0"/>
					</Button>
					<Button name="$parentSilverButton" parentKey="SilverButton" inherits="TitanPanelChildButtonTemplate">
						<Size>
							<AbsDimension x="32" y="13"/>
						</Size>
						<Anchors>
							<Anchor point="RIGHT" relativeKey="$parentCopperButton" relativePoint="LEFT">
								<Offset>
									<AbsDimension x="-4" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>

						<NormalTexture atlas="coin-silver">
								<Size x="13" y="13"/>
								<Anchors>
										<Anchor point="RIGHT"/>
								</Anchors>
						</NormalTexture>
						<ButtonText name="$parentText" parentKey="Text">
								<Anchors>
										<Anchor point="RIGHT" x="-13" y="0"/>
								</Anchors>
						</ButtonText>
						<NormalFont style="NumberFontNormalRight"/>
						<PushedTextOffset x="0" y="0"/>
					</Button>
					<Button name="$parentGoldButton" parentKey="GoldButton" inherits="TitanPanelChildButtonTemplate">
						<Size>
							<AbsDimension x="32" y="13"/>
						</Size>
						<Anchors>
							<Anchor point="RIGHT" relativeKey="$parentSilverButton" relativePoint="LEFT">
								<Offset>
									<AbsDimension x="-4" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>

						<NormalTexture atlas="coin-gold">
								<Size x="13" y="13"/>
								<Anchors>
										<Anchor point="RIGHT"/>
								</Anchors>
						</NormalTexture>
						<ButtonText name="$parentText" parentKey="Text">
								<Anchors>
										<Anchor point="RIGHT" x="-13" y="0"/>
								</Anchors>
						</ButtonText>
						<NormalFont style="NumberFontNormalRight"/>
						<PushedTextOffset x="0" y="0"/>
					</Button>
				</Frames>
				<Scripts>
					<OnLoad>
						SmallMoneyFrame_OnLoad(self);
						TitanPanelCurrencyButton_OnLoad(self);
						TitanPanelButton_OnLoad(self);
					</OnLoad>
					<OnShow>
						TitanPanelButton_OnShow(self);
					</OnShow>

					<OnEvent>
						TitanCurrency_OnEvent(self, event, ...);
					</OnEvent>
					<OnHide>
						--if ( self.hasPickup == 1 ) then
						--	CoinPickupFrame:Hide();
						--	self.hasPickup = 0;
						--end
						--TitanPanelCurrencyButton_OnHide();
					</OnHide>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
	<MessageFrame name="TitanPanelCurrency_Detail" insertMode="BOTTOM" parent="UIParent" frameStrata="HIGH" toplevel="true">
		<Size>
			<AbsDimension x="512" y="100"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<FontString inherits="ErrorFont" justifyH="CENTER"/>
	</MessageFrame>
</Ui>